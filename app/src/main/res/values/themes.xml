<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardLinker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_background_color</item>
        <item name="colorPrimaryVariant">@color/theme_background_color</item>
        <item name="colorOnPrimary">@color/theme_background_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_color_bright</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="ContinueButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/continue_button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/os_eb</item>
        <item name="android:layout_marginStart">@dimen/stand_margin_30dp</item>
        <item name="android:layout_marginEnd">@dimen/stand_margin_30dp</item>
        <item name="android:textSize">@dimen/stand_text_size_20sp</item>
    </style>
    <style name="LowContinueButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/continue_button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/os_eb</item>
        <item name="android:layout_marginStart">@dimen/stand_margin_30dp</item>
        <item name="android:layout_marginEnd">@dimen/stand_margin_30dp</item>
        <item name="android:textSize">@dimen/stand_text_size_20sp</item>
    </style>
    <style name="RoundButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_b</item>
        <item name="android:padding">@dimen/stand_margin_10dp</item>
        <item name="android:layout_marginStart">@dimen/stand_margin_30dp</item>
        <item name="android:layout_marginEnd">@dimen/stand_margin_30dp</item>
    </style>
    <style name="SmallRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/stand_margin_15dp</item>
    </style>
    <style name="LargeRoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/stand_margin_25dp</item>
    </style>
    <style name="MyAlertTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:itemTextAppearance">@style/MyAlertTextAppearance</item>
        <item name="android:textColorAlertDialogListItem">@color/text_color_bright</item>
        <item name="android:textAppearanceMedium">@style/MyAlertTextAppearance</item>
    </style>
    <style name="ContainerTheme">
        <item name="android:background">@drawable/container_background</item>
        <item name="android:layout_margin">@dimen/stand_margin_10dp</item>
        <item name="android:backgroundTint">@color/container_background_color</item>
    </style>
</resources>