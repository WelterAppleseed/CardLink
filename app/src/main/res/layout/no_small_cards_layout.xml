<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/no_small_cards_iv"
        android:layout_width="@dimen/card_height"
        android:layout_height="@dimen/card_height"
        android:src="@drawable/no_small_cards"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/there_is_no_cards_yet"
        android:textSize="@dimen/standp_text_size_24sp"
        android:layout_marginTop="@dimen/stand_margin_15dp"
        android:textColor="@color/text_color_bright"
        android:paddingHorizontal="@dimen/stand_margin_30dp"/>
</LinearLayout>