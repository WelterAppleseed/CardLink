<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_background_color"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/default_icon_side_size"
        android:layout_height="@dimen/default_icon_side_size"
        android:src="@drawable/faq"
        android:layout_marginTop="@dimen/stand_margin_10dp"
        app:tint="@color/attent_blue_color" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/problems_text"
        android:layout_gravity="center"
        android:textSize="@dimen/stand_text_size_18sp"
        android:textColor="@color/text_color_dark"
        android:gravity="center"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/contact_b"
        android:layout_width="match_parent"
        android:layout_height="@dimen/low_button_height"
        android:layout_marginVertical="@dimen/stand_margin_10dp"
        android:text="@string/contact_us"
        android:textAllCaps="false"
        style="@style/LowContinueButtonStyle"/>
</LinearLayout>